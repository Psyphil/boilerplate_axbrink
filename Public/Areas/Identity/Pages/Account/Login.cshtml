@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-group">
            <div class="card p-4">
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <h1>@ViewData["Title"]</h1>
                        <p class="text-muted">Sign In to your account</p>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-user"></i>
                                </span>
                            </div>
                            <input placeholder="Email" asp-for="Input.Email" required class="form-control" />
                            @*<div class="invalid-feedback">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>*@
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon-lock"></i>
                                </span>
                            </div>
                            <input placeholder="Password" asp-for="Input.Password" required class="form-control" />
                            @*<div class="invalid-feedback">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>*@
                        </div>
                        @*<div class="input-group mb-3">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>*@
                        <div class="row">
                                <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                <button type="submit" class="btn btn-primary px-4">Login</button>
                            </div>
                            <div class="col-7 text-right">
                                <a class="btn btn-link px-0" asp-page="./ForgotPassword">Forgot your password?</a>
                            </div>
                        </div>
                    </form>
                    @{ if ((Model.ExternalLogins?.Count ?? 0) != 0)
                        {
                            <div class="row">
                                <div class="col">
                                    <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div>
                                            <p>
                                                @foreach (var provider in Model.ExternalLogins)
                                                {
                                                    <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                }
                                            </p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        } }
                </div>
            </div>
            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                <div class="card-body text-center">
                    <div>
                        <h2>Sign up</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                        <a class="btn btn-primary active mt-3" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Now!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center mt-4">
    <div class="col-md-3">
        <a href="/" class="btn btn-dark btn-block"><i class="fas fa-long-arrow-left"></i> Back to Homepage</a>

    </div>
</div>
