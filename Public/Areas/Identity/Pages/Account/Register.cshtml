@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mx-4">
            <div class="card-body p-4">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation" novalidate>
                    <h1>@ViewData["Title"]</h1>
                    <p class="text-muted">Create your account</p>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="icon-user"></i>
                            </span>
                        </div>
                        <input placeholder="Email" asp-for="Input.Email" required class="form-control" />
                        @*<div class="invalid-feedback">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>*@
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="icon-lock"></i>
                            </span>
                        </div>
                        <input placeholder="Password" asp-for="Input.Password" required class="form-control" />
                        @*<div class="invalid-feedback">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>*@
                    </div>

                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="icon-lock"></i>
                            </span>
                        </div>
                        <input placeholder="Password" asp-for="Input.ConfirmPassword" required class="form-control" />
                        @*<div class="invalid-feedback">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>*@
                    </div>

                    <div class="row">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>

                    <button type="submit" class="btn btn-block btn-success">Create Account</button>
                </form>
            </div>
            @*<div class="card-footer p-4">
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-block btn-facebook" type="button">
                            <span>facebook</span>
                        </button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-block btn-twitter" type="button">
                            <span>twitter</span>
                        </button>
                    </div>
                </div>
            </div>*@
        </div>
    </div>
</div>
<div class="row justify-content-center mt-4">
    <div class="col-md-3">
        <a href="/" class="btn btn-dark btn-block"><i class="fas fa-long-arrow-left"></i> Back to Homepage</a>

    </div>
</div>